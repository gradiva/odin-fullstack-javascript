<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
{{#if messages}}
{{#each messages as |message|}}
<div class="box">
  <p>
    {{message.text}}
  </p>
  <p>
    Added by <strong>{{message.user}}</strong> on {{message.added}}
  </p>
</div>
{{/each}}
{{else}}
<h3>There are no messages at this time</h3>
{{/if}}
<a href="/new">Add a new message</a>