extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Name of album' name='title' required='true' value=(undefined===album ? '' : album.title) )
    div.form-group
      label(for='artist') Artist:
      select#artist.form-control(type='select', placeholder='Select artist' name='artist' required='true' )
        - artists.sort(function(a, b) {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        for artist in artists
          if album
            option(value=artist._id selected=(artist._id.toString()==album.artist._id.toString() ? 'selected' : false) ) #{artist.name}
          else
            option(value=artist._id) #{artist.name}
    div.form-group
      label(for='releaseDate') Release Date:
      input#releaseDate.form-control(type='date' name='releaseDate' value=(undefined===artist ? '' : artist.releaseDate) )
    div.form-group
      label(for='length') Length:
      input#length.form-control(type='text', placeholder='00:00' name='length' value=(undefined===album ? '' : album.length) required='true') 
    div.form-group
      label Genre:
      div
        for genre in genres
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='genre', id=genre._id, value=genre._id, checked=genre.checked )
            label(for=genre._id) #{genre.name}
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg