
extends layout

block content
  h1 #{title}: #{artist.name}
  p= artist.lifespan
  
  if artistAlbums.length
  
    p #[strong Delete the following albums before attempting to delete this artist.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Albums
    
      dl
      each album in artistAlbums
        dt 
          a(href=album.url) #{album.title}
        dd #{album.releaseDate}

  else
    p Do you really want to delete this artist?
    
    form(method='POST' action='')
      div.form-group
        input#artistid.form-control(type='hidden',name='artistid', required='true', value=artist._id )

      button.btn.btn-primary(type='submit') Delete